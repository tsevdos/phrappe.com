---
import { getCollection } from "astro:content";
import Config from "../lib/config";

const pages = await getCollection("pages");
---

<div class="bg-gray-800">
  <header class="flex flex-none items-center py-10">
    <div
      class="flex flex-col text-center md:flex-row md:items-center md:justify-between space-y-6 md:space-y-0 container xl:max-w-7xl mx-auto px-4 lg:px-8"
    >
      <div>
        <a
          href="/"
          class="inline-flex items-center space-x-2 font-bold text-lg tracking-wide text-white hover:opacity-75"
        >
          {Config.title}
        </a>
      </div>

      <div
        class="flex flex-col text-center md:flex-row md:items-center md:justify-between space-y-6 md:space-y-0 md:space-x-10"
      >
        <nav class="space-x-4 md:space-x-6">
          {
            pages.map(({ slug, data: { title } }) => (
              <a
                href={`/p/${slug}`}
                class="font-semibold text-gray-300 hover:text-gray-400 hover:underline"
              >
                {title}
              </a>
            ))
          }
        </nav>
      </div>
    </div>
  </header>
</div>
